<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="12dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp">


        <LinearLayout
            android:background="@drawable/gradientbackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="left"
                android:src="@drawable/images" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/pointA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:maxLines="1"
                    android:paddingLeft="12dp"
                    android:text="Point A"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    android:drawableLeft="@drawable/ic_location_on_red_24dp"/>

                <TextView
                    android:id="@+id/pointB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:paddingLeft="12dp"
                    android:text="Point B"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    android:drawableLeft="@drawable/ic_location_on_blue_24dp"/>
                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:paddingLeft="12dp"
                    android:text="Price"
                    android:textColor="#fff"
                    android:textSize="24sp"
                    android:layout_marginTop="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:paddingTop="15dp"
                >
                <Button
                    android:id="@+id/buttonAccept"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:paddingLeft="12dp"
                    android:text="Accept"
                    android:textColor="#fff"
                    android:textSize="24sp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/registerbutton"/>
            </LinearLayout>
        </LinearLayout>

</android.support.v7.widget.CardView>


