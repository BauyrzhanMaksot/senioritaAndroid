<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="wrap_content"
    android:layout_height="150dp"
    android:layout_margin="12dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:background="@drawable/gradientbackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="left"
            android:src="@drawable/images" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:maxLines="1"
                android:paddingLeft="12dp"
                android:text="Point A"
                android:id="@+id/pointAAcceptedClient"
                android:textColor="#fff"
                android:textSize="18sp"
                android:drawableLeft="@drawable/ic_location_on_red_24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:paddingLeft="12dp"
                android:text="Point B"
                android:id="@+id/pointBAcceptedClient"
                android:textColor="#fff"
                android:textSize="18sp"
                android:drawableLeft="@drawable/ic_location_on_blue_24dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:paddingLeft="12dp"
                android:id="@+id/priceAcceptedClient"
                android:text="Price"
                android:textColor="#fff"
                android:textSize="24sp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:paddingLeft="12dp"
                android:text="Date"
                android:id="@+id/dateAcceptedClient"
                android:textColor="#fff"
                android:textSize="24sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:paddingTop="90dp"
            android:paddingLeft="10dp"
            android:layout_gravity="left">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/registerbutton"
                android:maxLines="1"
                android:text="Finish"
                android:id="@+id/finishAcceptedClient"
                android:textColor="#fff"
                android:textSize="24sp" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>

